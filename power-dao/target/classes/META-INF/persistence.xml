<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd"
             version="3.1">

    <persistence-unit name="power-postgres-pu" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.power.base.dao.rdbms.persistence.physical.PhysicalTradeEntity</class>
        <class>com.power.base.dao.rdbms.persistence.physical.PhysicalLineItemEntity</class>
        <class>com.power.base.dao.rdbms.persistence.physical.PhysicalSettlementItemEntity</class>
        <class>com.power.base.dao.rdbms.persistence.swap.SwapTradeEntity</class>
        <class>com.power.base.dao.rdbms.persistence.swap.SwapPeriodEntity</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="${POWER_DB_URL:jdbc:postgresql://localhost:5432/power}"/>
            <property name="jakarta.persistence.jdbc.user" value="${POWER_DB_USERNAME:power}"/>
            <property name="jakarta.persistence.jdbc.password" value="${POWER_DB_PASSWORD:power}"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="${POWER_JPA_DDL:update}"/>
            <property name="hibernate.show_sql" value="${POWER_JPA_SHOW_SQL:false}"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>

